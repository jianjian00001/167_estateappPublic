@import "./weui.wxss";
@import "./iconfont.wxss";


.ql-container {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    font-size: 32rpx;
    line-height: 1.5;
    overflow: auto;
    padding: 20rpx 20rpx 40rpx 20rpx;
}

.ql-active {
    color: #22C704;
}

.iconfont {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    cursor: pointer;
    font-size: 40rpx;
}

.editor-container {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.toolbar {
    width: 100%;
    display: flex;
    justify-content: space-around;
}

.page-body {
    display: flex;
    flex-direction: column;
    width: 100%;
}