.weui-tabs {
    width: 100%
}

.weui-tabs-bar__wrp {
    width: 100%;
    position: fixed;
    top: -30rpx;
    z-index: 99;
    background-color: rgb(255, 255, 255);
    padding: 20rpx 0;
}

.weui-tabs-bar__content {
    width: 100%;
    white-space: nowrap
}

.weui-tabs-bar__item {
    display: inline-block
}

.weui-tabs-bar__title {
    display: inline-block;
    border-bottom-width: 2px;
    border-bottom-style: solid;
    border-bottom-color: transparent
}