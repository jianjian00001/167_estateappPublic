.content {
    width: 100%;
    height: 100%;
    position: absolute !important;
    left: 0;
    top: 0;
    background-color: #eee;
}

video {
    width: 100%;
}

.box {
    width: 100vw;
    height: 100vh;
    position: relative;
}

.content .but {
    width: 100%;
    height: 85rpx;
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
    z-index: 1;
}

.content .but button {
    width: 200rpx;
    height: 85rpx;
    line-height: 85rpx;
    background-color: #0a4935;
    color: #ffffff;
    font-size: 28rpx;
    text-align: center;
    border-radius: 50rpx;
}

.content video {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.content .special {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
}