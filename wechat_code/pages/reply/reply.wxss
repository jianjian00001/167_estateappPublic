@import '../../static//iconfig/reply/iconfont.wxss'

.container {
position: relative;
width: 100%;
display: flex;
flex-direction: column;
justify-content: flex-start;
}

.ql-container {
box-sizing: border-box;
width: 100%;
height: 100%;
font-size: 16px;
line-height: 1.5;
overflow: auto;
padding: 10px 10px 20px 10px;
border: 1px solid #ECECEC;
}

.ql-active {
color: #22C704;
}

.iconfont {
display: inline-block;
width: 30px;
height: 30px;
cursor: pointer;
font-size: 20px;
}

.toolbar {
box-sizing: border-box;
height: 50px;
width: 100%;
position: fixed;
left: 0;
background: white;
right: 100%;
top: 0;
display: flex;
align-items: center;
justify-content: space-between;
border: 1px solid #ECECEC;
border-left: none;
border-right: none;
}

.wrapper {}

.page-body {
display: flex;
flex-direction: column;
width: 100vw;
position: absolute;
top: 90rpx;
}