/* pages/register/register.wxss */


.register-container {
min-height: calc(100vh - 44px);
box-sizing: border-box;
}

.content-box {
width
:100%;
padding
:0 0 0 0;
position
:relative;
background
:#ffffff;
height
:100%;
}
.userInfo-from{
padding
:24rpx 24rpx 24rpx 24rpx;
background
:#ffffff;
display
:block;
height
:auto;
}
.item-box{
padding
:4rpx 0 4rpx 0;
margin
:0 0 24rpx 0;
border-color
:#eeeeee;
align-items
:center;
border-radius
:8rpx 0 0 8rpx;
border-width
:0 0 2rpx 0;
background
:#ffffff;
display
:flex;
width
:100%;
border-style
:solid;
height
:auto;
}
.item-label{
line-height
:80rpx;
font-size
:28rpx;
color
:#333333;
text-align
:right;
padding-left:40rpx;
padding-right: 20rpx;
}
.item-input{
border
:0px solid #eeeeee;
padding
:0px 24rpx 0px 24rpx;
margin
:0 0 0 0;
color
:#666666;
border-radius
:8rpx;
flex
:1;
background
:#ffffff00;
font-size
:28rpx;
height
:80rpx;
}
.item-img{
width
:80rpx;
border-radius
:100%;
object-fit
:cover;
display
:block;
height
:80rpx;
}

.down-item-picker{
width
:100%;
flex
:1;
height
:auto;
}
.down-item-picker-text{
width
:100%;
line-height
:80rpx;
font-size
:28rpx;
color
:#666666;
}
.save-btn{
border
:0;
padding
:0 0 0 0;
margin
:0 20rpx 0 20rpx;
color
:#ffffff;
background
:#1D5DCA;
width
:200rpx;
line-height
:80rpx;
font-size
:28rpx;
height
:80rpx;
}
.quite-btn{
border
:0;
padding
:0 0 0 0;
margin
:0 20rpx 0 20rpx;
color
:#666666;
background
:#eeeeee;
width
:200rpx;
line-height
:80rpx;
font-size
:28rpx;
height
:80rpx;
}
.btn-box{
width
:100%;
margin
:40rpx 0 0 0;
justify-content
:center;
display
:flex;
height
:auto;
}
.item-radio-itemBox{
align-items
:center;
display
:flex;
}
.item-radio-item{
align-items
:center;
margin
:0 20rpx 0 0;
display
:flex;
}

.item-checkbox-itemBox{
align-items
:center;
display
:flex;
display: flex;

}
.radio-itemText{
color
:#666666;
}

.item-checkbox-item{
align-items
:center;
margin
:0 20rpx 0 0;
display
:flex;
display: flex;
margin-right: 20rpx;
}
.active{
color
:#1D5DCA;
}
checkbox .wx-checkbox-input {
border
:2rpx solid #999999;
border-radius
:100%;
background
:#ffffff;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
border
:2rpx solid #1D5DCA;
color
:#ffffff;
border-radius
:100%;
background
:#1D5DCA;
}
